<!doctype html>
<html>
<head>
  <base href="/">
  <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css" crossorigin="anonymous">
  <script data-main="javascripts/core" src="javascripts/require.js"></script>
</head>
<body>
  <nav class="navbar navbar-default" ng-controller="NavController">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>  
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Spotify Playlist Manager</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li ng-show="!loggedIn"><a ng-click="logIn()" href="/login">Login</a></li>
          <li ng-show="loggedIn"><a ng-click="logOut()" href="/">Logout</a></li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  <div class="container" ng-controller="PlaylistController">
    <div class="row">
      <div class="col-xs-12">
        <h1>{{header1}}</h1>
      </div>
      <div ng-show="!loggedIn" class="col-xs-12">
        <p>Please log in</p>
      </div>
    </div>
    <div ng-show="loggedIn">

    <div class="row">
     <div class="col-xs-8">
      <input type="text" class="form-control" ng-model = "newPlaylist"></input>
    </div>
       <div class="col-xs-4">
        <button class="btn btn-default" ng-click="createPlaylist()">Create Playlist</button>
      </div>
    </div>
  <div class="row">
    <div class="col-xs-12">
      <h4>Choose a playlist to transfer:</h4>
    </div>
  </div>
  <div class="row"> 
    <div class="col-xs-6">
      <select ng-model="playlists.selected" ng-options="option.name for option in playlists.options track by option.id" ng-click="getTracks()">
      </select>
    </div>
    <div class="col-xs-6">
    <div class="row">

      <p>You have selected: {{playlists.selected.name}}</p>
    </div>
      <div class="row" style="height: 500px !important; overflow-y: scroll;">
      <ul class="list-group">
        <li ng-repeat="item in playlists.selectedtracks" class="list-group-item">{{item.track.name}} by <span ng-repeat="artist in item.track.artists">{{artist.name}}</span></li>
      </ul>

      </div class="row">
    </div>
  </div>

</div>

</div>
</body>
</html>

